<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_cores"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.tcc.MenuCoresActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDescricao"
            android:text="Utilize os botões abaixo para ler a descrição das cores."
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCorAzul"
            android:text="Azul"
            android:layout_centerHorizontal="true"
            android:onClick="onButtonClick"
            android:tag="AZUL"
            style="@style/botaoAzul"
            android:contentDescription="Descrição da cor azul"
            android:drawableLeft="@mipmap/ic_launcher"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCorAmarelo"
            android:text="Amarelo"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/buttonCorAzul"
            android:onClick="onButtonClick"
            android:tag="AMARELO"
            style="@style/botaoAmarelo"
            android:contentDescription="Descrição da cor amarela"
            android:drawableLeft="@mipmap/ic_launcher"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCorVerde"
            android:text="Verde"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/buttonCorAmarelo"
            android:onClick="onButtonClick"
            android:tag="VERDE"
            style="@style/botaoVerde"
            android:contentDescription="Descrição da cor verde"
            android:drawableLeft="@mipmap/ic_launcher"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCorPreto"
            android:text="Preto"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/buttonCorVerde"
            android:onClick="onButtonClick"
            android:tag="PRETO"
            style="@style/botaoPreto"
            android:contentDescription="Descrição da cor preta"
            android:drawableLeft="@mipmap/ic_launcher"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCorRosa"
            android:text="Rosa"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/buttonCorPreto"
            android:onClick="onButtonClick"
            android:tag="ROSA"
            style="@style/botaoRosa"
            android:contentDescription="Descrição da cor rosa"
            android:drawableLeft="@mipmap/ic_launcher"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCorMarrom"
            android:text="Marrom"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/buttonCorRosa"
            android:onClick="onButtonClick"
            android:tag="MARROM"
            style="@style/botaoMarrom"
            android:contentDescription="Descrição da cor marrom"
            android:drawableLeft="@mipmap/ic_launcher"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCorBranco"
            android:text="Branco"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/buttonCorMarrom"
            android:onClick="onButtonClick"
            android:tag="BRANCO"
            style="@style/botaoBranco"
            android:contentDescription="Descrição da cor branca"
            android:drawableLeft="@mipmap/ic_launcher"/>

    </LinearLayout>

</ScrollView>
